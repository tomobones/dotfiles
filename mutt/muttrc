# Mutt configuration template
# IMAP settings
set folder = "imaps://thomas.vogg@gmx.de@imap.gmx.net:993"
set imap_user = "thomas.vogg@gmx.de"
set imap_pass = "password"
set imap_check_subscribed = yes
set imap_list_subscribed = yes
set timeout = 15
set mail_check = 90
set imap_keepalive = 180
unset imap_passive
set imap_idle
set from = "thomas.vogg@gmx.de"
set realname = "Thomas Vogg"

# SMTP settings
set smtp_url = "smtp://thomas.vogg@gmx.de@mail.gmx.net:587"
set smtp_pass = "password"
set ssl_starttls = yes

# Mailboxes
set spoolfile = "+INBOX"
mailboxes =INBOX =Sent =Trash =Drafts =Yunk
set record = "+Sent"
set trash = "+Trash"
set postponed = "+Drafts"

# Mail Editor
set editor = vim

# Display Sidebar
set sidebar_width = 20
set sidebar_visible = yes

# If hcache is a filder, Mutt will create sub cache folders for each account which may speeds things up even more
set header_cache = "~/.cache/mutt"

# Store messages locally to speed things up, like searching message bodies
set message_cachedir = "~/.cache/mutt"

# Sidebar navigation
# bind index.pager \CP sidebar-prev               # Ctrl-n Next Folder
# bind index.pager \CN sidepar-next               # Ctrl-p Previous Folder
# bind index.pager \CI sidepar-open               # Ctrl-i Open Folder
# bind index.pager \CB sidepar-toggle_visible     # Ctrl-b Toggle Folder

source /home/tomo/.config/mutt/color.muttrc
